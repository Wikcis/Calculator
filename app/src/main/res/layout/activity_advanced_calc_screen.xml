<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdvancedCalcScreen">

    <Button
        android:id="@+id/resultButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#DF8B0E"
        android:padding="3dp"
        android:text="="
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/twoButton"
        app:layout_constraintTop_toBottomOf="@+id/threeButton" />

    <Button
        android:id="@+id/multiplyButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#DF8B0E"
        android:padding="3dp"
        android:text="×"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/nineButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nineButton"
        app:layout_constraintTop_toTopOf="@+id/nineButton" />

    <Button
        android:id="@+id/fiveButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#293F49"
        android:padding="3dp"
        android:text="5"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/twoButton"
        app:layout_constraintEnd_toStartOf="@+id/sixButton"
        app:layout_constraintStart_toEndOf="@+id/fourButton"
        app:layout_constraintTop_toBottomOf="@+id/eightButton" />

    <Button
        android:id="@+id/dotButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#3F51B5"
        android:padding="3dp"
        android:text="•"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/resultButton"
        app:layout_constraintStart_toEndOf="@id/zeroButton"
        app:layout_constraintTop_toBottomOf="@+id/twoButton" />

    <Button
        android:id="@+id/divisionButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#DF8B0E"
        android:padding="3dp"
        android:text="÷"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/plusMinusButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plusMinusButton"
        app:layout_constraintTop_toTopOf="@+id/plusMinusButton" />

    <Button
        android:id="@+id/plusMinusButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#8A8686"
        android:padding="3dp"
        android:text="±"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/nineButton"
        app:layout_constraintEnd_toStartOf="@+id/divisionButton"
        app:layout_constraintStart_toEndOf="@+id/clearButton"
        app:layout_constraintTop_toBottomOf="@+id/sqrtButton" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#8A8686"
        android:padding="3dp"
        android:text="C"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/eightButton"
        app:layout_constraintEnd_toStartOf="@+id/plusMinusButton"
        app:layout_constraintStart_toEndOf="@+id/allClearButton"
        app:layout_constraintTop_toBottomOf="@+id/logButton" />

    <Button
        android:id="@+id/allClearButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#CA2C2C"
        android:padding="3dp"
        android:text="AC"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/sevenButton"
        app:layout_constraintEnd_toStartOf="@+id/clearButton"
        app:layout_constraintStart_toEndOf="@+id/powerButton"
        app:layout_constraintTop_toBottomOf="@+id/lnButton" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#DF8B0E"
        android:padding="3dp"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/sixButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sixButton"
        app:layout_constraintTop_toTopOf="@+id/sixButton" />

    <Button
        android:id="@+id/sevenButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#293F49"
        android:padding="3dp"
        android:text="7"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/fourButton"
        app:layout_constraintEnd_toStartOf="@+id/eightButton"
        app:layout_constraintStart_toEndOf="@+id/squareButton"
        app:layout_constraintTop_toBottomOf="@+id/allClearButton" />

    <Button
        android:id="@+id/eightButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#293F49"
        android:padding="3dp"
        android:text="8"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/fiveButton"
        app:layout_constraintEnd_toStartOf="@+id/nineButton"
        app:layout_constraintStart_toEndOf="@+id/sevenButton"
        app:layout_constraintTop_toBottomOf="@+id/clearButton" />

    <Button
        android:id="@+id/zeroButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#293F49"
        android:padding="3dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dotButton"
        app:layout_constraintStart_toEndOf="@id/sinButton"
        app:layout_constraintTop_toBottomOf="@+id/oneButton" />

    <Button
        android:id="@+id/nineButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#293F49"
        android:padding="3dp"
        android:text="9"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/sixButton"
        app:layout_constraintEnd_toStartOf="@+id/multiplyButton"
        app:layout_constraintStart_toEndOf="@+id/eightButton"
        app:layout_constraintTop_toBottomOf="@+id/plusMinusButton" />

    <Button
        android:id="@+id/subtractButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#DF8B0E"
        android:padding="3dp"
        android:text="-"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/threeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/threeButton"
        app:layout_constraintTop_toTopOf="@+id/threeButton" />

    <Button
        android:id="@+id/twoButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#293F49"
        android:padding="3dp"
        android:text="2"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/dotButton"
        app:layout_constraintEnd_toStartOf="@+id/threeButton"
        app:layout_constraintStart_toEndOf="@+id/oneButton"
        app:layout_constraintTop_toBottomOf="@+id/fiveButton" />

    <Button
        android:id="@+id/cosButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#6C117C"
        android:padding="3dp"
        android:text="cos"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/sinButton"
        app:layout_constraintEnd_toStartOf="@+id/oneButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tanButton" />

    <Button
        android:id="@+id/threeButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#293F49"
        android:padding="3dp"
        android:text="3"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/resultButton"
        app:layout_constraintEnd_toStartOf="@+id/subtractButton"
        app:layout_constraintStart_toEndOf="@+id/twoButton"
        app:layout_constraintTop_toBottomOf="@+id/sixButton" />

    <Button
        android:id="@+id/oneButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#293F49"
        android:padding="3dp"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/zeroButton"
        app:layout_constraintEnd_toStartOf="@+id/twoButton"
        app:layout_constraintStart_toEndOf="@+id/cosButton"
        app:layout_constraintTop_toBottomOf="@+id/fourButton" />

    <Button
        android:id="@+id/fourButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#293F49"
        android:padding="3dp"
        android:text="4"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/oneButton"
        app:layout_constraintEnd_toStartOf="@+id/fiveButton"
        app:layout_constraintStart_toEndOf="@+id/tanButton"
        app:layout_constraintTop_toBottomOf="@+id/sevenButton" />

    <Button
        android:id="@+id/sixButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#293F49"
        android:padding="3dp"
        android:text="6"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/threeButton"
        app:layout_constraintEnd_toStartOf="@+id/addButton"
        app:layout_constraintStart_toEndOf="@+id/fiveButton"
        app:layout_constraintTop_toBottomOf="@+id/nineButton" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp"
        app:layout_constraintGuide_percent="0.25" />

    <TextView
        android:id="@+id/resultView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="50sp"
        android:autoSizeMinTextSize="16sp"
        android:autoSizeTextType="uniform"
        android:gravity="bottom|left"
        android:padding="3dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textIsSelectable="false"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expressionTextView"
        tools:ignore="RtlCompat,RtlHardcoded" />

    <TextView
        android:id="@+id/expressionTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeTextType="uniform"
        android:gravity="bottom|left"
        android:padding="3dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#878484"
        android:textColorHint="#877F7F"
        app:layout_constraintBottom_toTopOf="@id/resultView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat,RtlHardcoded" />

    <Button
        android:id="@+id/sinButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#6C117C"
        android:padding="3dp"
        android:text="sin"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/zeroButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cosButton" />

    <Button
        android:id="@+id/squareButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#6C117C"
        android:padding="3dp"
        android:text="x²"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/tanButton"
        app:layout_constraintEnd_toStartOf="@+id/sevenButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/powerButton" />

    <Button
        android:id="@+id/sqrtButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#6C117C"
        android:padding="3dp"
        android:text="√"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/plusMinusButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clearButton"
        app:layout_constraintTop_toBottomOf="@+id/resultView" />

    <Button
        android:id="@+id/powerButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#6C117C"
        android:padding="3dp"
        android:text="xʸ"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/squareButton"
        app:layout_constraintEnd_toStartOf="@+id/allClearButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/percentButton" />

    <Button
        android:id="@+id/tanButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#6C117C"
        android:padding="3dp"
        android:text="tan"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/cosButton"
        app:layout_constraintEnd_toStartOf="@+id/fourButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/squareButton" />

    <Button
        android:id="@+id/percentButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#6C117C"
        android:padding="3dp"
        android:text="%"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/powerButton"
        app:layout_constraintEnd_toStartOf="@+id/lnButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultView" />

    <Button
        android:id="@+id/logButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#6C117C"
        android:padding="3dp"
        android:text="log"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/clearButton"
        app:layout_constraintEnd_toStartOf="@+id/sqrtButton"
        app:layout_constraintStart_toEndOf="@id/lnButton"
        app:layout_constraintTop_toBottomOf="@+id/resultView" />

    <Button
        android:id="@+id/lnButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#6C117C"
        android:padding="3dp"
        android:text="ln"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/allClearButton"
        app:layout_constraintEnd_toStartOf="@+id/logButton"
        app:layout_constraintStart_toEndOf="@id/percentButton"
        app:layout_constraintTop_toBottomOf="@+id/resultView" />

</androidx.constraintlayout.widget.ConstraintLayout>